<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="title_background" format="reference|color"/>
    <attr name="title" format="string|reference"/>

    <declare-styleable name="CircleView">
        <attr name="max_radius" format="dimension"/>
        <attr name="circle_color" format="color"/>
        <attr name="circle_width" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="TopBar">
        <attr name="title"/>
        <attr name="titleTextSize" format="dimension"/>
        <attr name="titleColor" format="color"/>
        <attr name="leftText" format="string"/>
        <attr name="leftTextBackground" format="reference|color"/>
        <attr name="leftTextColor" format="color"/>
        <attr name="rightText" format="string"/>
        <attr name="rightTextBackground" format="reference|color"/>
        <attr name="rightTextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="TextImageView">
        <attr name="title"/>
        <attr name="image_background" format="reference|color"/>
        <attr name="title_background"/>
    </declare-styleable>
</resources>